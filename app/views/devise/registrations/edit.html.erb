<div class="h-full flex flex-col justify-center items-center">
  <h1 class="text-2xl font-bold m-10 text-primary-600">Rate My Mouth</h1>
  <div class="w-[600px] border border-neutral-200 bg-neutral-50 p-6 rounded-lg shadow-sm">
    <h1 class="text-xl font-medium mb-4">Modifier mon profil</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-4 py-2 w-full border border-neutral-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 p-3 bg-blue-50 text-blue-700 rounded-md">
          En attente de confirmation pour : <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <span class="text-sm text-neutral-500">(laissez vide si vous ne souhaitez pas le changer)</span>
        <%= f.password_field :password, autocomplete: "new-password", class: "px-4 py-2 w-full border border-neutral-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-neutral-500"><%= @minimum_password_length %> caractères minimum</p>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe", class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-4 py-2 w-full border border-neutral-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white" %>
      </div>

      <div class="mb-6">
        <%= f.label :current_password, "Mot de passe actuel", class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <span class="text-sm text-neutral-500">(nous avons besoin de votre mot de passe actuel pour confirmer les changements)</span>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "px-4 py-2 w-full border border-neutral-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white" %>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Mettre à jour", class: "inline-flex items-center justify-center px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
      </div>
    <% end %>

    <div class="mt-8 pt-6 border-t border-neutral-200">
      <h3 class="text-lg font-medium text-neutral-800 mb-4">Supprimer mon compte</h3>

      <div class="flex items-center justify-between">
        <span class="text-neutral-600">Vous souhaitez supprimer votre compte ?</span>
        <%= button_to "Supprimer mon compte", registration_path(resource_name),
            data: { confirm: "Êtes-vous sûr ?", turbo_confirm: "Êtes-vous sûr ?" },
            method: :delete,
            class: "inline-flex items-center justify-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "Retour", :back, class: "text-primary-600 hover:text-primary-800 hover:underline" %>
    </div>
  </div>
</div>
