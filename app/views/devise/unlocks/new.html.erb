<div class="h-full flex flex-col justify-center items-center">
  <h1 class="text-2xl font-bold m-10 text-primary-600">Rate My Mouth</h1>
  <div class="w-[400px] border border-neutral-200 bg-neutral-50 p-5 rounded-lg shadow-sm">
    <h1 class="text-center mb-4">Renvoyer les instructions de d√©blocage</h1>

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-4 py-2 w-full border border-neutral-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white" %>
      </div>

      <div class="mt-6">
        <%= f.submit "Renvoyer les instructions", class: "w-full bg-primary-600 text-white py-2 px-4 text-center rounded-lg hover:bg-primary-700 transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 font-medium" %>
      </div>
    <% end %>

    <div id="links" class="mt-4 text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
