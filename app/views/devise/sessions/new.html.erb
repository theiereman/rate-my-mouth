<div class="h-full flex flex-col justify-center items-center">
  <h1 class="text-2xl font-bold m-10 text-primary-600">Rate My Mouth</h1>
  <div class="w-[400px] border border-neutral-200 bg-neutral-50 p-5 rounded-lg shadow-sm">
    <h1 class="text-center text-xl font-medium mb-4 text-neutral-800">Identifiez-vous</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-4 py-2 w-full border border-neutral-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Mot de passe", class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "px-4 py-2 w-full border border-neutral-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-neutral-300 rounded" %>
          <%= f.label :remember_me, "Se souvenir de moi", class: "ml-2 block text-sm text-neutral-700" %>
        </div>
      <% end %>

      <%= f.submit "Se connecter", class: "w-full bg-primary-600 text-white py-2 px-4 text-center rounded-lg hover:bg-primary-700 transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 font-medium" %>
    <% end %>

    <% if flash[:alert] %>
      <div id="alerts" class="mt-4 p-3 bg-red-50 text-red-600 text-sm rounded-md">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div id="links" class="mt-4 text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
